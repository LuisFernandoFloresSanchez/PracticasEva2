<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestauranteDetalle">

    <TextView
        android:id="@+id/lblRestaurantedet"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_above="@+id/lblDescripciondet"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-63dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblDescripciondet"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblPlaza"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblDireccion"
        android:layout_marginTop="-160dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="378dp"
        android:layout_height="54dp"
        android:layout_below="@+id/lblDireccion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-109dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:onClick="click"/>
</RelativeLayout>